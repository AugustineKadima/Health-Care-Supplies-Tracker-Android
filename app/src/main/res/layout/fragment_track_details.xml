<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TrackDetailsFragment"
    android:background="@color/healthCareWhiteBlue">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white"
       android:layout_marginStart="16dp"
       android:layout_marginBottom="16dp"
       android:layout_marginEnd="16dp"
       android:padding="16dp"
       android:elevation="4dp">

       <TextView
           android:id="@+id/track_details_product_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Product Name"
           android:textColor="@color/healthCareDarkBlue"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_marginBottom="16dp"/>

       <TextView
           android:id="@+id/track_details_donor_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Donor:"
           android:layout_below="@id/track_details_product_name"
           android:textColor="@color/black"
           android:textSize="16sp"

           />
       <TextView
           android:id="@+id/track_details_quantity"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Quantity:"
           android:layout_below="@id/track_details_donor_name"
           android:textColor="@color/black"
           android:textSize="16sp"
           />
       <TextView
           android:id="@+id/track_details_order_date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Date:"
           android:layout_below="@id/track_details_quantity"
           android:textColor="@color/black"
           android:textSize="16sp"
           />
       <TextView
           android:id="@+id/track_details_dispatch_date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Dispatch Date:"
           android:layout_below="@id/track_details_order_date"
           android:textColor="@color/black"
           android:textSize="16sp"
           />

       <TextView
           android:id="@+id/track_details_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Status:"
           android:layout_below="@id/track_details_dispatch_date"
           android:textColor="@color/black"
           android:textSize="16sp"
           />

       <TextView
           android:id="@+id/track_details_map"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Map"
           android:textColor="@color/healthCareGrey"
           android:textSize="18sp"
           android:textStyle="bold"
           android:minHeight="48dp"
           android:layout_alignParentBottom="true"
           />

   </RelativeLayout>
</RelativeLayout>