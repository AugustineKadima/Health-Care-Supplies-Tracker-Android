<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/healthCareWhiteBlue"
    tools:context=".hospital.StockActivity">

    <TextView
        android:id="@+id/stocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="In stock"
        android:textColor="@color/healthCareGrey"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Track Orders"
        android:textColor="@color/healthCareGrey"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="New Order"
        android:textColor="@color/healthCareDarkBlue"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:textColorHint="@color/teal_200"
        android:minHeight="48dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:inputType="text"
        android:background="@color/white"
        android:layout_below="@id/stocks"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:textColorHint="@color/teal_200"
        android:minHeight="48dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:inputType="textWebEmailAddress"
        android:background="@color/white"
        android:layout_below="@id/item_name"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textColorHint="@color/teal_200"
        android:minHeight="48dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:inputType="text"
        android:background="@color/white"
        android:layout_below="@id/quantity"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/donor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Donor"
        android:textColorHint="@color/teal_200"
        android:minHeight="48dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:inputType="text"
        android:background="@color/white"
        android:layout_below="@id/description"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/healthCareDarkBlue"
        android:text="Confirm Order"
        android:layout_marginTop="90dp"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:layout_below="@id/donor"
        android:elevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>