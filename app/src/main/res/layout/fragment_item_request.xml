<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ItemRequestFragment"
    android:background="@color/healthCareWhiteBlue"
    android:elevation="4dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:elevation="4dp"
       android:background="@color/white"
       android:padding="16dp"
       android:layout_marginBottom="16dp">
    <TextView
        android:id="@+id/single_item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/healthCareDarkBlue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/single_item_donor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital:"
        android:layout_below="@id/single_item_product_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/single_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:layout_below="@id/single_item_donor_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/single_item_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:layout_below="@id/single_item_quantity"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/single_item_dispatch_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Status:"
        android:layout_below="@id/single_item_order_date"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btn_confirm_delivery"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="16dp"
           android:layout_marginBottom="16dp"
           android:background="@color/healthCareWhiteBlue"
           android:elevation="8px"
           android:minHeight="48dp"
           android:padding="8px"
           android:text="Deliver"
           android:textColor="@color/black"
            android:textAllCaps="false"
           />
    <TextView
        android:id="@+id/single_item_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:textColor="@color/healthCareGrey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:minHeight="48dp"
        android:layout_alignParentBottom="true"
        />
   </RelativeLayout>
</RelativeLayout>